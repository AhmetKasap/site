<%- contentFor('extraStyles') %>
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    primary: '#1e40af',
                    secondary: '#64748b',
                    accent: '#f59e0b'
                }
            }
        }
    }
</script>

<%- contentFor('body') %>
<!-- Blog Detail Content -->
<section class="pt-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
                <li><a href="/" class="hover:text-primary">Ana Sayfa</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li><a href="/blog" class="hover:text-primary">Blog</a></li>
                <li><i class="fas fa-chevron-right"></i></li>
                <li class="text-gray-900 line-clamp-1"><%= blog.title %></li>
            </ol>
        </nav>

        <!-- Article Header -->
        <header class="mb-12">
            <div class="mb-6">
                <span class="text-sm text-gray-500"><%= new Date(blog.createdAt).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-8"><%= blog.title %></h1>
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-gradient-to-br from-primary to-blue-800 rounded-full flex items-center justify-center">
                    <i class="fas fa-user-tie text-white"></i>
                </div>
                <div>
                    <p class="font-semibold text-gray-900">Av. İbrahim Halil Köroğlu</p>
                    <p class="text-sm text-gray-500">Hukuk Bürosu Kurucusu</p>
                </div>
            </div>
        </header>

        <!-- Article Content -->
        <article class="prose prose-lg max-w-none">
            <div class="text-lg text-gray-700 leading-relaxed space-y-6">
                <%- blog.content %>
            </div>
        </article>

        <!-- Navigation -->
        <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex justify-between items-center">
                <a href="/blog" class="inline-flex items-center text-primary font-semibold hover:text-blue-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Blog Listesine Dön
                </a>
                <a href="/iletisim" class="inline-flex items-center bg-primary text-white hover:bg-blue-700 font-semibold py-2 px-4 rounded-lg transition-colors">
                    <i class="fas fa-envelope mr-2"></i>
                    İletişime Geç
                </a>
            </div>
        </div>
    </div>
</section>